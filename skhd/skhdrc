# swap windows
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - l : yabai -m window --warp east
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - h : yabai -m window --warp west

# bring focused window to 1st
alt - c : yabai -m window --swap first

alt - x : yabai -m space --mirror y-axis

# navigation for window focus
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# screen sizes normalize
ctrl - 0 : yabai -m space --balance

# modify window size
shift + cmd - a : yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0
shift + cmd - s : yabai -m window --resize top:0:20 || yabai -m window --resize bottom:0:20 
shift + cmd - d : yabai -m window --resize right:20:0 || yabai -m window --resize left:20:0
shift + cmd - w : yabai -m window --resize bottom:0:-20 || yabai -m window --resize top:0:-20
