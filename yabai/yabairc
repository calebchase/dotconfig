yabai -m config debug_output on

# padding between windows and screen boundaries
yabai -m config top_padding 5
yabai -m config bottom_padding 5
yabai -m config left_padding 5
yabai -m config right_padding 5
yabai -m config window_gap 5

# binary space partitioning layout
yabai -m config layout bsp

# apps are used as float and are no included in layout
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Spotify$" manage=off

# border on using nord color scheme
yabai -m config window_border                on
yabai -m config active_window_border_color 0xFFA3BE8C
yabai -m config window_border_width          4
yabai -m window --toggle border

# disabled
yabai -m config window_opacity off
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.9

# disabled
yabai -m config status_bar                   off
yabai -m config status_bar_icon_font         "Font Awesome 5ree:Solid:12"
yabai -m config status_bar_power_icon_strip   
yabai -m config status_bar_space_icon        
yabai -m config status_bar_clock_icon        
yabai -m config status_bar_space_icon_strip  I II III IV V VI VII VIII IX X
yabai -m config status_bar_foreground_color  0xffD8DEE9
yabai -m config status_bar_background_color  0xff2E3440F
